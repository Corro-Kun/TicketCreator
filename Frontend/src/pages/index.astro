<style>
  .center{
  	display: flex;
  	justify-content: center;
  	align-items: center;
  	height: 100%;
  }
  .main{
	display: flex;
	max-width: 600px;
	padding: 10px;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	text-align: center;
	gap: 10px;
  }
  .button-container {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    border-radius: 10px;
    background-color: var(--Color_Background_Second);
	filter: contrast(100%);
    padding: 0.25rem 0.75rem;
    font-size: 0.75rem;
    font-weight: 500;
    line-height: 1.25rem;
    color: var(--Color_Text_Second); 
    backdrop-filter: blur(10px);
    transition: background-color 0.3s ease, color 0.3s ease, filter 0.3s ease;
	cursor: pointer;
	text-decoration: none;
  }
  
  .button-container:hover {
	filter: contrast(120%);
  }
  
  .button-container .read-more {
    display: inline-flex;
    align-items: center;
    padding-left: 0.5rem;
    color: var(--Color_Text);
  }
  .icon{
	margin-left: 0.5rem;
	transform: translateY(-1);
  }
  h1{
	font-size: 2rem;
	color: var(--Color_Text);
  }
  p{
	font-size: 1rem;
	color: var(--Color_Text);
  }
  .login{
	padding: 4px 8px;
	color: var(--Color_Text);
	border: 2px solid var(--Color_Border);
	border-radius: 5px;
	text-decoration: none;
	transition: .3s ease;
  }
  .login:hover{
	background-color: var(--Color_Background_Second);
	color: var(--Color_Text_Second);
  }
</style>